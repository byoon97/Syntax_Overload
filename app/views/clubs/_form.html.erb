<div class="row">
    <div class='col-sm-6'>
        <%= form_for @club do |form| %>
    <div class="form-group">
        <%= label_tag :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
     <div class="form-group">
        <%= label_tag :url %>
        <%= form.text_field :url, class: "form-control" %>
    </div>
     <div class="form-group">
        <%= label_tag :regulations %>
        <%= form.text_area :regulations, class: "form-control" %>
    </div>
        <%= form.submit "Submit", class: "btn btn-primary"%>
    <% end %>
    </div>
</div>