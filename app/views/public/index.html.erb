<div class="container">
    <div class="row">
        <div class="col pt-3">
        <p class="h4 mb-4">Trending</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Trending Post 1
        </div>
            <div class="col-sm-3">
                Trending Post 2
            </div>
                <div class="col-sm-3">
                    Trending Post 3
                </div>
                    <div class="col-sm-3">
                        Trending Post 4
                    </div>
        </div>
        <div class="row">
            <div class="col pt-3">
                <p class="h4 mb-4">Popular</p>
            </div>
        </div>
    <div class="row">
        <div class="col-8">
        <% @posts.each do |post| %>
        <div class="card pt-3">
            <h4><%= link_to post.title, club_post_path(post.club_id, post) %></h4>
            <p><%= truncate post.body, length: 200 %></p>
        
        </div>
         <% end %>    
        </div>
        <div class="col-4">
           <p class="h5 mb-4">Pristine Clubs</p>
           
           <div class="card">
                <ul class="list-group list-group-flush">
                 <% @clubs.each do |club| %>
                    <li class="list-group-item"><%= link_to club.name, club_path(club) %></li>
                    <% end %>
                </ul>
            </div>
            
            <%= link_to  "View All", clubs_path, class: "btn btn-primary mt-3" %>
        </div>
    </div>
</div>